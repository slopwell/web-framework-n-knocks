root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md, *.txt, *.json, *.yaml, *.yml, *.ts, *.js, *.css, *.scss, *.html, *.xml]
indent_style = space
indent_size = 2

[*.py | Dockerfile | .dockerignore | .gitignore]
indent_style = space
indent_size = 4

[ Makefile]
indent_style = tab
indent_size = 4
